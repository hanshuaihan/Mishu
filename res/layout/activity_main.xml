<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/title" >

       <Button
           android:id="@+id/login_title"
           android:layout_width="55sp"
           android:layout_height="35sp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:background="@drawable/login3"
           android:textColor="#fff"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/login_title"
           android:layout_alignBottom="@+id/login_title"
           android:layout_centerHorizontal="true"
           android:text="秘书助手"
           android:textColor="#fff"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/dlzt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text=""
           android:textColor="#fff" />

   </RelativeLayout>

    <ImageButton
        android:id="@+id/wodejilu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.68"
        android:background="@drawable/wodejilu" />

    <ImageButton
        android:id="@+id/bumenjilu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.68"
        android:background="@drawable/bumenjilu" />

    <ImageButton
        android:id="@+id/tongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.68"
        android:background="@drawable/tongzhi" />

</LinearLayout>